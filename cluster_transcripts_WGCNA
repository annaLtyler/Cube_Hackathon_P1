#!/bin/bash
#SBATCH -J cluster_transcripts_WGCNA
#SBATCH -N 1 # number of nodes
#SBATCH -n 1 # number of cores
#SBATCH --mem=8G # memory pool for all cores
#SBATCH -t 0-2:00 # time (D-HH:MM)
#SBATCH -o slurm.%N.%j.out # STDOUT
#SBATCH -e slurm.%N.%j.err # STDERR
#SBATCH --mail-user=anna.tyler@jax.org
#SBATCH --mail-type=END
# example use: sbatch --array=1-4 -N1 cluster_transcripts_WGCNA

cd $SLURM_SUBMIT_DIR
echo $SLURM_ARRAY_TASK_ID


tissueIdx=$SLURM_ARRAY_TASK_ID
echo $tissueType

module load singularity

singularity exec /projects/carter-lab/atyler/Containers/cape_transcripts_latest.sif R -e "rmarkdown::render(here::here('Documents', '1.Cluster_Transcripts_WGCNA.Rmd'))" --args "$tissueIdx"
